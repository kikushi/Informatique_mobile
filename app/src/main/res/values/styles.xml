<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.radiobutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="AppTheme.radiobutton.red">
        <item name="android:buttonTint">#c20000</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="AppTheme.radiobutton.green">
        <item name="android:buttonTint">#248d51</item>

    </style>

    <style name="AppTheme.widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name = "AppTheme.widget.textviewByte">
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.widget.switch">
        <item name="android:textOff">@string/Off</item>
        <item name="android:textOn">@string/On</item>
    </style>

    <style name="AppTheme.widget.switch.readonly">
        <item name="android:clickable">false</item>
    </style>

    <style name="AppTheme.widget.edittext">
        <item name="android:hint">@string/value_0_255</item>
        <item name="android:inputType">number</item>
    </style>
</resources>