<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Communication">

    <EditText
        android:id="@+id/editText_msg"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/button_send" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="13dp"
        android:text="@string/send" />

    <Button
        android:id="@+id/buttonajouter"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_below="@+id/editText_msg"
        android:layout_alignStart="@+id/editText_msg"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="579dp"
        android:text="@string/btn_ajouter" />

    <Button
        android:id="@+id/buttonsupprimer"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/buttonajouter"
        android:text="@string/btn_supprimer" />

    <Button
        android:id="@+id/buttondeconnecter"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="120dp"
        android:layout_toEndOf="@+id/buttonsupprimer"
        android:text="@string/btn_deconnecter" />

</RelativeLayout>